<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>dashboard</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='/css/style.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='/fontawesome/css/all.min.css'>
    <script type="text/javascript" src="/js/jquery.min.js" defer></script>
    <script  src='/js/script.js' defer></script>
    <script  src='/js/pagination.js' defer></script>
</head>
<body>
    <div class="preload"></div>
    <div class="main">
        
        <%- include("leftBar") %>

        <div class="right-container">

            <%- include("header") %>
            
            <div class="content">
                <div class="top-content">
                    <p class="welcome">
                        Bienvenu à la polyclinique Fulltang
                    </p>
                    <p>
                        Adiministrator profil
                    </p>
                    <p class="page-title">
                        Liste du personnel...
                    </p>
                    
                </div>
                <div class="patient-list">
                    <% if(locals.message){ %>
                        <div class="<%='notification '+type %>">
                            <p>
                                <%=message %>
                            </p>
                            <i class="fa-solid fa-xmark"></i>
                        </div>
                    <% } %>
                    <div class="search">
                        <div>
                            <input type="text" placeholder="search" >
                            <button><i class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </div>
                    <div class="tableBloc">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Sexe</th>
                                    <th>Téléphone</th>
                                    <th>Spécialité</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% personnel.forEach(i=>{ %>
                                    <tr>
                                        <td><%=i.id%></td>
                                        <td><%=i.nom%></td>
                                        <td><%=i.prenom%></td>
                                        <td><%=i.sexe%></td>
                                        <td><%=i.telephone%></td>
                                        <td><%=i.specialite%></td>
                                        
                                        <td>
                                            <a class="tView" href=<%="/fulltang/V0/administrator/personnel/"+i.id %> ><i class="fa-solid fa-eye "></i></a>
                                            
                                        </td>
                                    </tr>
                                <% }) %>
                                
                               
                                 
                                
                            </tbody>
                        </table>
                        <div class="pagination">
                            <button class="prev"><<</button>
                            <p>
                                page   
                                <span class="n-page">1</span>/<span class="t-page"></span >
                            </p>
                            <button class="next">>></button>
                        </div>
                    </div>
                </div>
                <div class="mWindow" aria-hidden="true">
                    <div class="modalBox" id="modalBox">
                            <p>Voulez vous vraiment supprimer le profil Mr/Mme <span></span> </p>
                            <div class="mDecision">
                                <form method="post">
                                    <input type="hidden" name="id"/>
                                    <button type="submit">OUI</button>
                                </form>
                                <button>NON</button>
                            </div>
                    </div>
                </div>
            </div>
        </div>
         
    </div>
    <script>
        var nav=document.querySelectorAll(".section")
        nav[0].querySelector("ul").classList.add("height")


    </script>
    
</body>
</html>